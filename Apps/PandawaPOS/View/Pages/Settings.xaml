<UserControl x:Class="PandawaPOS.View.Pages.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:lex="http://wpflocalizeextension.codeplex.com"
             xmlns:Ext="clr-namespace:XAMLMarkupExtensions.Strings;assembly=XAMLMarkupExtensions"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             lex:ResxLocalizationProvider.DefaultAssembly="PandawaPOS"
             lex:ResxLocalizationProvider.DefaultDictionary="PandawaUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <TextBlock Text="{lex:Loc Settings_DisplayName}" />
        <mui:ModernTab SelectedSource="/View/Contents/SettingsAppearance.xaml" Layout="List">
            <mui:ModernTab.Links>
                <mui:Link DisplayName="{lex:Loc Settings_DisplayName}" Source="/View/Contents/SettingsAppearance.xaml" />
            </mui:ModernTab.Links>
        </mui:ModernTab>
    </Grid>
</UserControl>
