<Window x:Class="PandawaCash.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"        
        xmlns:cmd="http://www.galasoft.ch/mvvmlight"
        Title="MainWindow" Height="350" Width="525"
        DataContext="{Binding [MainViewModel], Source={StaticResource ViewModelLocator}}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Skins/DefaultStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    
    <Grid>
        <TextBlock Height="37" Margin="65,23,0,0" TextWrapping="Wrap" Text="{Binding ApplicationTitle}"
            VerticalAlignment="Top" FontFamily="Gautami" FontSize="26.667" Foreground="black"
            FontWeight="Bold" HorizontalAlignment="Left" Width="202" >
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseLeftButtonDown">
                    <cmd:EventToCommand Command="{Binding MouseLeftButtonDown, Mode=OneWay}"
                            MustToggleIsEnabledValue="True"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TextBlock>
    </Grid>
</Window>
